<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" type="text/css" href="css/main.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <title>Brito Variedades</title>

</head>

<body>
    
    <div class="containerx">
        <%- include('components/header'); -%>
        <div class="row">

            <% if(posts.length<1){%>
            <p class="text-white">Nenhum produto adicionado, adicione o primeiro!</p>
            <%  } %>


            <% posts.forEach(post=>{ %>
            <div class="col-lg-6 card mt-2 mr-0">
                <div class="row p-2">
                    <div class="col-5 overflow-hidden">
                        <img src="/uploads/<%= post.img %>" class="card-img" alt="Imagem não encontrada">
                    </div>
                    <div class="col-7">
                        <div class="d-flex align-items-start">
                            <h5 class="w-100"><b> <%= post.title %> </b></h5>
                            <!-- display more button -->
                        </div>
                        <ul>
                            <li><strong>Descrição:</strong> <%= post.description %></li>
                            <li><strong>Preço:</strong> R$ <%= post.price %></li>
                        </ul>
                    </div>
                </div>
            </div>
            <% }) %>
        </div>
</body>

</html>